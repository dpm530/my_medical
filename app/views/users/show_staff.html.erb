<%= render "shared/navbar_signed_in" %>

<div class="container py-5">
   <div class="container-fluid">
      <div class="row mb-4">
         <div id="blocks" class="col-md-12 border py-4">
            <h1>Staff</h1>
            <table class="table table-hover">
               <thead>
                  <tr>
                     <th>First name</th>
                     <th>Last name</th>
                     <th>Email</th>
                  </tr>
               </thead>
               <tbody>
                  <% @users.each do |user| %>
                     <tr>
                        <td><%= user.first_name %></td>
                        <td><%= user.last_name %></td>
                        <td><%= user.email %></td>
                     </tr>
                  <% end %>
               </tbody>
            </table>
         </div>
      </div>
   </div>
</div>

<%= render "shared/footer" %>
