<%= form_with(model: intake_note, local: true) do |form| %>
  <% if intake_note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(intake_note.errors.count, "error") %> prohibited this intake_note from being saved:</h2>

      <ul>
      <% intake_note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
     <div class="col-md-6">

        <div class="form-group">
          <%= form.label :note_type %>
          <%= form.text_field :note_type, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :presenting_problem %>
          <%= form.text_field :presenting_problem, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :current_mental_status %>
          <%= form.text_field :current_mental_status , class:'form-control'%>
        </div>

        <div class="form-group">
         <%= form.label :safety_issues %>
         <%= form.text_field :safety_issues, class:'form-control' %>
      </div>

      <div class="form-group">
         <%= form.label :background %>
         <%= form.text_field :background, class:'form-control' %>
      </div>

     </div>
     <div class="col-md-6">

        <div class="form-group">
          <%= form.label :diagnosis %>
          <%= form.text_field :diagnosis, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :patient_id %>
          <%= form.select('patient_id', options_for_select(@patients.collect{ |p| [ p.first_name, p.id ] }), {class:'form-control'}) %>
        </div>

        <div class="form-group">
          <%= form.label :user_id %>
          <%= form.select('user_id', options_for_select(@users.collect{ |p| [ p.first_name, p.id ] }), class:'form-control') %>
        </div>

        <div class="form-group">
          <%= form.label :date %>
          <%= form.date_select :date, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :time %>
          <%= form.time_select :time, class:'form-control' %>
        </div>
     </div>
  </div>

   <hr>

  <div class="actions">
    <%= form.submit class:'btn btn-primary' %>
  </div>
<% end %>
