<%= form_with(model: treatment_plan_note, local: true) do |form| %>
  <% if treatment_plan_note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(treatment_plan_note.errors.count, "error") %> prohibited this treatment_plan_note from being saved:</h2>

      <ul>
      <% treatment_plan_note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
     <div class="col-md-6">
        <div class="form-group">
          <%= form.label :patient_id %>
          <%= form.select('patient_id', options_for_select(@patients.collect{ |p| [ p.first_name, p.id ] }), class:'form-control') %>
        </div>

        <div class="form-group">
          <%= form.label :user_id %>
          <%= form.select('user_id', options_for_select(@users.collect{ |p| [ p.first_name, p.id ] }), class:'form-control') %>
        </div>

        <div class="form-group">
          <%= form.label :date %>
          <%= form.date_select :date, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :time %>
          <%= form.time_select :time, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :diagnosis %>
          <%= form.text_field :diagnosis, class:'form-control' %>
        </div>
     </div>
     <div class="col-md-6">
        <div class="form-group">
          <%= form.label :presenting_problem %>
          <%= form.text_field :presenting_problem , class:'form-control'%>
        </div>

        <div class="form-group">
          <%= form.label :treatment_goals %>
          <%= form.text_field :treatment_goals, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :objective %>
          <%= form.text_field :objective, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :frequency %>
          <%= form.text_field :frequency, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :note_type %>
          <%= form.text_field :note_type , class:'form-control'%>
        </div>
     </div>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
