<p id="notice"><%= notice %></p>

<h1>Emergency Contacts</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Relationship</th>
      <th>Phone1</th>
      <th>Phone2</th>
      <th>Email</th>
      <th>Address line 1</th>
      <th>Address line 2</th>
      <th>City</th>
      <th>State</th>
      <th>Zipcode</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emergency_contacts.each do |emergency_contact| %>
      <tr>
        <td><%= emergency_contact.first_name %></td>
        <td><%= emergency_contact.last_name %></td>
        <td><%= emergency_contact.relationship %></td>
        <td><%= emergency_contact.phone1 %></td>
        <td><%= emergency_contact.phone2 %></td>
        <td><%= emergency_contact.email %></td>
        <td><%= emergency_contact.address_line_1 %></td>
        <td><%= emergency_contact.address_line_2 %></td>
        <td><%= emergency_contact.city %></td>
        <td><%= emergency_contact.state %></td>
        <td><%= emergency_contact.zipcode %></td>
        <td><%= emergency_contact.note %></td>
        <td><%= link_to 'Show', emergency_contact %></td>
        <td><%= link_to 'Edit', edit_emergency_contact_path(emergency_contact) %></td>
        <td><%= link_to 'Destroy', emergency_contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

