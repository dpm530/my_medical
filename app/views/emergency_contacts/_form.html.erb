<%= form_with(model: emergency_contact, local: true) do |form| %>
  <% if emergency_contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(emergency_contact.errors.count, "error") %> prohibited this emergency_contact from being saved:</h2>

      <ul>
      <% emergency_contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
     <div class="col-md-6">
        <div class="form-group">
          <%= form.label :first_name %>
          <%= form.text_field :first_name, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :last_name %>
          <%= form.text_field :last_name, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :relationship %>
          <%= form.text_field :relationship, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :phone1 %>
          <%= form.text_field :phone1, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :phone2 %>
          <%= form.text_field :phone2, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, class:'form-control' %>
        </div>
     </div>
     <div class="col-md-6">
        <div class="form-group">
          <%= form.label :address_line_1 %>
          <%= form.text_field :address_line_1, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :address_line_2 %>
          <%= form.text_field :address_line_2, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :city %>
          <%= form.text_field :city, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :state %>
          <%= form.text_field :state, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :zipcode %>
          <%= form.text_field :zipcode, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :note %>
          <%= form.text_area :note, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :patient_id %>
          <%= form.select('patient_id', options_for_select(@patients.collect{ |p| [ p.first_name, p.id ] }), class:'form-control') %>
        </div>
     </div>
  </div>

  <div class="actions">
    <%= form.submit 'Update', class:'btn btn-primary' %>
  </div>
<% end %>
