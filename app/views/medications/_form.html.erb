<%= form_with(model: medication, local: true) do |form| %>
  <% if medication.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(medication.errors.count, "error") %> prohibited this medication from being saved:</h2>

      <ul>
      <% medication.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
     <div class="col-md-6">
        <div class="form-group">
          <%= form.label :drug_name %>
          <%= form.text_field :drug_name, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :dosage %>
          <%= form.text_field :dosage, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :frequency %>
          <%= form.text_field :frequency, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :began_on %>
          <%= form.date_select :began_on, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :reason_taking %>
          <%= form.text_field :reason_taking, class:'form-control' %>
        </div>
     </div>
     <div class="col-md-6">
        <div class="form-group">
          <%= form.label :side_effects %>
          <%= form.text_field :side_effects, class:'form-control' %>
        </div>

        <div class="form-group">
          <%= form.label :note %>
          <%= form.text_area :note , class:'form-control'%>
        </div>

        <div class="form-group">
          <%= form.label :patient_id %>
          <%= form.select('patient_id', options_for_select(@patients.collect{ |p| [ p.first_name, p.id ] }), class:'form-control') %>
        </div>
     </div>
  </div>


  <div class="actions">
    <%= form.submit 'Update', class:'btn btn-primary' %>
  </div>
<% end %>
