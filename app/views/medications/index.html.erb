<p id="notice"><%= notice %></p>

<h1>Medications</h1>

<table>
  <thead>
    <tr>
      <th>Drug name</th>
      <th>Dosage</th>
      <th>Frequency</th>
      <th>Began on</th>
      <th>Reason taking</th>
      <th>Side effects</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medications.each do |medication| %>
      <tr>
        <td><%= medication.drug_name %></td>
        <td><%= medication.dosage %></td>
        <td><%= medication.frequency %></td>
        <td><%= medication.began_on %></td>
        <td><%= medication.reason_taking %></td>
        <td><%= medication.side_effects %></td>
        <td><%= medication.note %></td>
        <td><%= link_to 'Show', medication %></td>
        <td><%= link_to 'Edit', edit_medication_path(medication) %></td>
        <td><%= link_to 'Destroy', medication, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

