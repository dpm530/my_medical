<%= form_with(model: diagnosis, local: true) do |form| %>
  <% if diagnosis.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(diagnosis.errors.count, "error") %> prohibited this diagnosis from being saved:</h2>

      <ul>
      <% diagnosis.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :onset %>
    <%= form.date_select :onset, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :diagnosis %>
    <%= form.text_field :diagnosis, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :treatment %>
    <%= form.text_field :treatment, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :note %>
    <%= form.text_area :note, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :patient_id %>
    <%= form.select('patient_id', options_for_select(@patients.collect{ |p| [ p.first_name, p.id ] }), class:'form-control') %>
  </div>

  <div class="actions">
    <%= form.submit 'Update', class:'btn btn-primary' %>
  </div>
<% end %>
