<%= form_with(model: patient, local: true) do |form| %>
  <% if patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
      <% patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

   <div class="row">
      <div class="col-md-6">
         <div class="form-group">
           <%= form.label :first_name %>
           <%= form.text_field :first_name, class:'form-control' %>
         </div>

         <div class="form-group">
           <%= form.label :last_name %>
           <%= form.text_field :last_name, class:'form-control' %>
         </div>

         <div class="form-group">
           <%= form.label :email %>
           <%= form.text_field :email, class:'form-control' %>
         </div>

         <div class="form-group">
           <%= form.label :dob %>
           <%= form.date_field :dob, class:'form-control' %>
         </div>

         <div class="form-group">
           <%= form.label :sex %>
           <%= form.text_field :sex, class:'form-control' %>
         </div>

         <div class="form-group">
           <%= form.label :employer %>
           <%= form.text_field :employer, class:'form-control' %>
         </div>

         <div class="form-group">
           <%= form.label :occupation %>
           <%= form.text_field :occupation, class:'form-control' %>
         </div>
      </div>
      <div class="col-md-6">
         <div class="form-group">
           <%= form.label :phone %>
           <%= form.text_field :phone, class:'form-control'%>
         </div>

         <div class="form-group">
           <%= form.label :address_line_1 %>
           <%= form.text_field :address_line_1, class:'form-control' %>
         </div>

         <div class="form-group">
           <%= form.label :address_line_2 %>
           <%= form.text_field :address_line_2, class:'form-control' %>
         </div>

         <div class="form-group">
           <%= form.label :city %>
           <%= form.text_field :city, class:'form-control' %>
         </div>

         <div class="form-group">
           <%= form.label :state %>
           <%= form.text_field :state, class:'form-control'%>
         </div>

         <div class="form-group">
           <%= form.label :zipcode %>
           <%= form.text_field :zipcode, class:'form-control' %>
         </div>

         <div class="form-group">
           <%= form.label('Clinician') %>
           <%= form.select('user_id', options_for_select(@users.collect{ |p| [ p.first_name, p.id ] }), class:'form-control') %>
         </div>
      </div>
   </div>


  <div class="actions">
    <%= form.submit 'Update', class:'btn btn-primary btn-lg' %>
  </div>
<% end %>
